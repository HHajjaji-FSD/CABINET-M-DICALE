{% extends 'base.html.twig' %}

{% block title %}Dépences {% endblock %}

{% block body %}

    <a class="btn btn-success mb-2" href="{{ path('depenses_new') }}">Nouveau</a>
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title"> La liste des dépences</h3>
            <div class="card-tools">
                <form action="{{ path('depenses_index') }}" class="input-group input-group-sm">
                    <input type="text" name="search" value="{{ last_search|default('') }}" class="form-control" placeholder="Rechercher...">
                    <div class="input-group-append">
                        <button class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>

        </div>
        <div class="card-body p-0">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th class="mailbox-attachment">Dépence</th>
                        <th>Prix</th>
                        <th class="mailbox-date">Durée</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {%for depense in depenses%}
                        <tr>
                            <td class="mailbox-attachment">{{ depense.nom }}</td>
                            <td>{{ depense.prix }} DH</td>
                            <td class="mailbox-date">{{ depense.nbrMois }} mois et {{ depense.nbrJours }} jours</td>
                            <td>
                                <div class="d-flex justify-content-end align-items-center">
                                    <a class="btn btn-sm btn-info" href="{{ path('depenses_edit', {'id': depense.id}) }}" title="Éditer depense"><i class="fas fa-edit"></i></a>
                                    {{ include('depenses/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Aucun enregistrement trouvé</td>
                        </tr>
                    {%endfor%}
                    </tbody>
                </table>

            </div>

        </div>
    </div>
{% endblock %}
