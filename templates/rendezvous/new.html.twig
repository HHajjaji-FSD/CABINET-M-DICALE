{% extends "base.html.twig" %}

{% block body %}

    {% embed "components/_card_page.html.twig" %}

        {% block crdTitle "Selectionner Patient" %}

        {% block crdBody %}

            <div class="row" {{ stimulus_controller('rendezVousPatient') }}>
                <div class="col-md-4">

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-success" type="submit">
                        Enregistre
                    </button>
                    {{ form_end(form) }}


                </div>

                <div class="col-md-8">
                    <turbo-frame id="nouveau-patient">
                        <a href="{{ path('patient_new') }}" class="btn btn-primary float-right">
                            <i class="fas fa-plus"></i>
                            Ajoute Nouveau Patient
                        </a>
                    </turbo-frame>

                </div>
            </div>


        {% endblock %}
    {% endembed %}
{% endblock %}