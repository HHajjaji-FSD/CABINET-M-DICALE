<div class="card-body p-0">
    <div class="table-responsive mailbox-messages">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th >Date de consultation</th>
                <th>Prix</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                {% for consultation in patient.consoltations %}
                    {% if consultation.ordonnance %}
                        <tr>
                            <td>{{consultation.ordonnance.prixFinal}} DH</td>
                            <td>{{consultation.ordonnance.dateORD|ago}}</td>
                            <td>
                                <div>
                                    <a href="{{ path('ordonnance_show', {'id': consultation.ordonnance.id}) }}"><i title="visite ordonnance" class="fa fa-eye"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>