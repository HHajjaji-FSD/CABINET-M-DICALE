{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-4">
            <div class="card card-primary card-outline">
                <div class="card-body box-profile ">
                    <div class="text-center">
                        <i class="fas fa-user text-xl"></i>
                    </div>
                    <h3 class="profile-username text-center">{{app.user.username}}</h3>
                    <p class="text-muted text-center">{{app.user.roles[0]}}</p>
                </div>
            </div>
        </div>
        <div class="col-lg-8">

            <div class="card card-primary card-tabs">
                <div class="card-header p-0 pt-1">
                    <ul class="nav nav-tabs" id="custom-tabs-one-tab" role="tablist">

                        <li class="nav-item">
                            <a class="nav-link active" id="custom-tabs-one-profile-tab" data-toggle="pill"
                               href="#contentSettings"
                               role="tab" aria-controls="contentRDV" aria-selected="true">Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="custom-tabs-one-messages-tab" data-toggle="pill"
                               href="#contentPwd"
                               role="tab" aria-controls="contentConsult" aria-selected="false">Change Mot de passe</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="custom-tabs-one-tabContent">
                        <div class="tab-pane fade show active" id="contentSettings" role="tabpanel"
                             aria-labelledby="contentSettings">
                            {{ include('setting/_form.html.twig',{'form':form}) }}
                        </div>
                        <div class="tab-pane fade" id="contentPwd" role="tabpanel" aria-labelledby="contentPwd">
                            {{ include('profile/_change_password_form.html.twig') }}
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
{% endblock %}